{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "sourceMap": true,
    "target": "es2016",
    "lib": ["esnext", "dom"],
    "outDir": "build",
    "allowJs": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts", "src/**/*.js", "server.ts", "knexfile.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
